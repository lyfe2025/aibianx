{
  "kind": "collectionType",
  "collectionName": "commissions",
  "info": {
    "singularName": "commission",
    "pluralName": "commissions",
    "displayName": "一级返佣记录",
    "description": "返佣系统 - 管理一级邀请返佣计算和结算"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "inviter": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": true,
      "description": "获得返佣的邀请人"
    },
    "invitee": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": true,
      "description": "产生返佣的被邀请人"
    },
    "invitation": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::invitation.invitation",
      "description": "关联邀请记录"
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "required": true,
      "description": "触发返佣的订单"
    },
    "commissionType": {
      "type": "enumeration",
      "enum": ["first_purchase", "renewal", "upgrade"],
      "required": true,
      "description": "返佣类型"
    },
    "amount": {
      "type": "decimal",
      "required": true,
      "description": "返佣金额（单位：分）"
    },
    "rate": {
      "type": "decimal",
      "required": true,
      "description": "返佣比例（如0.15表示15%）"
    },
    "originalAmount": {
      "type": "decimal",
      "required": true,
      "description": "订单原金额（单位：分）"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "confirmed", "paid", "cancelled"],
      "default": "pending",
      "description": "返佣状态"
    },
    "settlementBatch": {
      "type": "string",
      "description": "结算批次"
    },
    "payoutMethod": {
      "type": "string",
      "description": "提现方式"
    },
    "settledAt": {
      "type": "datetime",
      "description": "结算时间"
    },
    "isFirstTimeBonus": {
      "type": "boolean",
      "default": false,
      "description": "是否为首次邀请奖励"
    }
  }
}