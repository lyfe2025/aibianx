{
    "kind": "collectionType",
    "collectionName": "tags",
    "info": {
        "singularName": "tag",
        "pluralName": "tags",
        "displayName": "Tag",
        "description": "标签管理"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "unique": true,
            "maxLength": 50
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "description": {
            "type": "text",
            "maxLength": 200
        },
        "color": {
            "type": "string",
            "default": "#3B82F6",
            "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        },
        "icon": {
            "type": "string",
            "maxLength": 50
        },
        "featured": {
            "type": "boolean",
            "default": false
        },
        "sortOrder": {
            "type": "integer",
            "default": 0
        },
        "articles": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::article.article",
            "mappedBy": "tags"
        }
    }
}