{
    "kind": "collectionType",
    "collectionName": "categories",
    "info": {
        "singularName": "category",
        "pluralName": "categories",
        "displayName": "Category",
        "description": "文章分类管理"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "unique": true,
            "maxLength": 50
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "description": {
            "type": "text",
            "maxLength": 300
        },
        "icon": {
            "type": "string",
            "maxLength": 50
        },
        "color": {
            "type": "string",
            "default": "#8B5CF6",
            "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        },
        "featuredImage": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "sortOrder": {
            "type": "integer",
            "default": 0
        },
        "featured": {
            "type": "boolean",
            "default": false
        },
        "seoTitle": {
            "type": "string",
            "maxLength": 60
        },
        "seoDescription": {
            "type": "text",
            "maxLength": 160
        },
        "articles": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::article.article",
            "mappedBy": "category"
        }
    }
}