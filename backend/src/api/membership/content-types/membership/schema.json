{
  "kind": "collectionType",
  "collectionName": "memberships",
  "info": {
    "singularName": "membership",
    "pluralName": "memberships",
    "displayName": "会员服务",
    "description": "会员服务管理 - 管理用户付费会员权益和服务状态"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": true,
      "description": "会员用户"
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne", 
      "target": "api::order.order",
      "description": "关联购买订单"
    },
    "membershipLevel": {
      "type": "enumeration",
      "enum": ["basic", "premium", "vip"],
      "required": true,
      "description": "会员等级：基础版/高级版/VIP版"
    },
    "planType": {
      "type": "enumeration",
      "enum": ["monthly", "yearly", "lifetime"],
      "required": true,
      "description": "付费计划：月付/年付/终身"
    },
    "planName": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "description": "会员套餐名称"
    },
    "startDate": {
      "type": "date",
      "required": true,
      "description": "会员开始日期"
    },
    "endDate": {
      "type": "date",
      "description": "会员到期日期（终身会员为空）"
    },
    "autoRenew": {
      "type": "boolean",
      "default": false,
      "description": "是否开启自动续费"
    },
    "status": {
      "type": "enumeration",
      "enum": ["active", "expired", "cancelled", "suspended"],
      "default": "active",
      "description": "会员状态：激活/过期/取消/暂停"
    },
    "features": {
      "type": "json",
      "description": "会员特权功能列表"
    },
    "originalPrice": {
      "type": "integer",
      "description": "原价（分为单位）"
    },
    "actualPrice": {
      "type": "integer",
      "required": true,
      "description": "实际支付价格（分为单位）"
    },
    "discountInfo": {
      "type": "json",
      "description": "优惠信息（优惠券、促销等）"
    }
  }
}