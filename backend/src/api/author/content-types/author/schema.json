{
    "kind": "collectionType",
    "collectionName": "authors",
    "info": {
        "singularName": "author",
        "pluralName": "authors",
        "displayName": "Author",
        "description": "作者信息管理"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "maxLength": 100
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "bio": {
            "type": "text",
            "maxLength": 500
        },
        "avatar": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "email": {
            "type": "email"
        },
        "website": {
            "type": "string"
        },
        "twitter": {
            "type": "string"
        },
        "github": {
            "type": "string"
        },
        "linkedin": {
            "type": "string"
        },
        "position": {
            "type": "string",
            "maxLength": 100
        },
        "company": {
            "type": "string",
            "maxLength": 100
        },
        "featured": {
            "type": "boolean",
            "default": false
        },
        "articles": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::article.article",
            "mappedBy": "author"
        }
    }
}