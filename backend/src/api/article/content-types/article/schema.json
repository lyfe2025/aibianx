{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "Article",
        "description": "文章内容管理"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "maxLength": 255,
            "minLength": 1,
            "description": "文章标题（必填，1-255字符）"
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true,
            "description": "URL友好的唯一标识符，基于标题自动生成"
        },
        "content": {
            "type": "richtext",
            "required": true,
            "description": "文章正文内容（富文本，必填）"
        },
        "excerpt": {
            "type": "text",
            "maxLength": 500,
            "description": "文章摘要或简介（最长500字符，用于列表显示）"
        },
        "featuredImage": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ],
            "description": "文章特色图片（封面图，仅支持图片格式）"
        },
        "publishedAt": {
            "type": "datetime",
            "description": "文章发布时间（为空则为草稿状态）"
        },
        "viewCount": {
            "type": "integer",
            "default": 0,
            "min": 0,
            "description": "文章浏览次数（默认为0，系统自动统计）"
        },
        "readingTime": {
            "type": "integer",
            "default": 5,
            "min": 1,
            "description": "预估阅读时长（单位：分钟，默认5分钟）"
        },
        "seoTitle": {
            "type": "string",
            "maxLength": 60,
            "description": "SEO标题（搜索引擎显示，最长60字符）"
        },
        "seoDescription": {
            "type": "text",
            "maxLength": 160,
            "description": "SEO描述（搜索结果摘要，最长160字符）"
        },
        "featured": {
            "type": "boolean",
            "default": false,
            "description": "是否为精选文章（用于首页推荐）"
        },
        "tags": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::tag.tag",
            "inversedBy": "articles",
            "description": "文章标签（多对多关系，可选择多个标签）"
        },
        "category": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::category.category",
            "inversedBy": "articles",
            "description": "文章分类（多对一关系，每篇文章属于一个分类）"
        },
        "author": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::author.author",
            "inversedBy": "articles",
            "description": "文章作者（多对一关系，每篇文章有一个作者）"
        }
    }
}