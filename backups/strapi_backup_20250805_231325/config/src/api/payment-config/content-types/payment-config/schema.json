{
  "kind": "singleType",
  "collectionName": "payment_config",
  "info": {
    "singularName": "payment-config",
    "pluralName": "payment-configs",
    "displayName": "支付配置",
    "description": "支付系统配置管理 - 控制各种支付方式的开关和参数配置"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "general": {
      "type": "component",
      "component": "payment.general-config",
      "required": true,
      "description": "通用支付配置"
    },
    
    "alipay": {
      "type": "component", 
      "component": "payment.alipay-config",
      "description": "支付宝配置"
    },
    
    "wechatPay": {
      "type": "component",
      "component": "payment.wechat-config", 
      "description": "微信支付配置"
    },
    
    "stripe": {
      "type": "component",
      "component": "payment.stripe-config",
      "description": "Stripe支付配置"
    },

    "environment": {
      "type": "enumeration",
      "enum": ["sandbox", "production"],
      "default": "sandbox",
      "required": true,
      "description": "运行环境：沙箱/生产环境"
    },
    
    "webhookSecret": {
      "type": "string",
      "maxLength": 200,
      "description": "Webhook通用密钥（用于验证回调安全性）"
    },
    
    "callbackBaseUrl": {
      "type": "string",
      "maxLength": 500,
      "default": "http://localhost:1337",
      "description": "回调基础URL（用于生成webhook地址）"
    },
    
    "frontendBaseUrl": {
      "type": "string", 
      "maxLength": 500,
      "default": "http://localhost",
      "description": "前端基础URL（用于支付跳转和回调）"
    },
    
    "lastModifiedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "admin::user",
      "description": "最后修改人"
    },
    
    "configNotes": {
      "type": "text",
      "description": "配置说明和注意事项"
    }
  }
}