{
  "kind": "collectionType",
  "collectionName": "refunds",
  "info": {
    "singularName": "refund",
    "pluralName": "refunds",
    "displayName": "退款记录",
    "description": "退款系统 - 管理所有退款申请和处理流程"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "required": true,
      "description": "原订单"
    },
    "payment": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::payment.payment",
      "description": "原支付记录"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": true,
      "description": "退款用户"
    },
    "refundNo": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 100,
      "description": "退款单号"
    },
    "refundAmount": {
      "type": "decimal",
      "required": true,
      "description": "退款金额（单位：分）"
    },
    "refundReason": {
      "type": "text",
      "required": true,
      "description": "退款原因"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "approved", "rejected", "completed"],
      "default": "pending",
      "description": "退款状态"
    },
    "processedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "description": "处理人"
    },
    "processNote": {
      "type": "text",
      "description": "处理备注"
    },
    "processedAt": {
      "type": "datetime",
      "description": "处理时间"
    }
  }
}